---
import { getCollection, type CollectionEntry, render } from "astro:content";

type Group = CollectionEntry<"groups">;
type Page = CollectionEntry<"pages">;

export async function getStaticPaths() {
  const groups = await getCollection("groups");
  return groups.map((group) => ({
    params: { slug: group.slug },
    props: { group },
  }));
}

const { group } = Astro.props as { group: Group };

const allGroups = await getCollection("groups");
const allPages = await getCollection("pages");

const subgroups = allGroups.filter((g) => group.data.subgroups.includes(g.slug));
const pages = allPages.filter((p) => group.data.pages.includes(p.slug));

const { Content } = await render(group);

import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title={group.data.title} description={group.data.description}>
  <article class="group-content">
    <h1 style={`color:${group.data.color}`}>{group.data.title}</h1>
    <p>{group.data.description}</p>
    
    <Content />

    {subgroups.length > 0 && (
      <section>
        <h2>Subgroups</h2>
        <ul>
          {subgroups.map((sg) => (
            <li><a href={`/groups/${sg.slug}/`}>{sg.data.title}</a></li>
          ))}
        </ul>
      </section>
    )}

    {pages.length > 0 && (
      <section>
        <h2>Pages</h2>
        <ul>
          {pages.map((pg) => (
            <li><a href={`/pages/${pg.slug}/`}>{pg.data.title}</a></li>
          ))}
        </ul>
      </section>
    )}
  </article>
</BaseLayout>

<style>
  .group-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .group-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #eaeaea;
  }

  p {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  section {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eaeaea;
  }

  section h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #555;
  }

  ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  a {
    color: #6366f1;
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: #4f46e5;
    text-decoration: underline;
  }
</style>
